{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "@pedrovasher/servicec"
      ],
      "registryUrls": [
        "https://npm.pkg.github.com/"
      ],
      "automerge": true,
      "branchPrefix": "main"
    }
  ],
  "hostRules": [
    {
      "matchHost": "npm.pkg.github.com",
      "hostType": "npm",
      "token": "{{secrets.MEND_TOKEN}}"
    }
  ],
  "npmrc": "@pedrovasher:registry=https://npm.pkg.github.com/",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency Dashboard"
}
